<%- include("partials/header") %>
<h1>Compose</h1>
<form action="/compose" method="post">
<div class="form-group">
  <label for="title" class="form-label">Title</label>
  <input class="form-control" type="text" name="postTitle" id="title" />

  <label for="article" class="form-label">Post</label>
  <textarea class="form-control" name="postBody" rows="8" cols="80" id="article"></textarea>
</div>

  <button class="btn btn-primary" type="submit" name="submit">Publish</button>
</form>
<%- include("partials/footer") %>
